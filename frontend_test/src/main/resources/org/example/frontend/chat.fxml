<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <ListView fx:id="messageList" prefHeight="400.0" prefWidth="702.0" VBox.vgrow="ALWAYS" />
    <HBox spacing="10">
        <TextField fx:id="inputField" prefHeight="26.0" prefWidth="414.0" HBox.hgrow="ALWAYS" />
      <Button mnemonicParsing="false" text="File" onAction="#handleChooseFile"/>
      <Button mnemonicParsing="false" onAction="#initRoom" text="Init" />
        <Button onAction="#handleSend" text="Send" />
    </HBox>
</VBox>
